        <div class="bg-white rounded-lg shadow-sm p-4 mb-4">
          <div class="flex items-center justify-between mb-3">
            <h2 class="text-lg font-medium text-gray-900">Collections</h2>
          </div>

          <!-- Recently Viewed (will be populated by JS) -->
